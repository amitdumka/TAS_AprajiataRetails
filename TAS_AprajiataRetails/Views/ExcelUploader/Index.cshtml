<p>
    <h3 class="text-warning">Upload Voyager Data(Excel)</h3>
    <hr />
    @using (Html.BeginForm("UploadExcel", "ExcelUploader", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <div class="control-label col-md-2 text-danger ">Upload Type:</div>
                <div class="col-md-2 ">
                    @Html.DropDownList("UploadType", EnumHelper.GetSelectList (typeof (UploadTypes)), "Select Upload Type", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-primary">Excel File:</div>
                <div class="col-md-4 form-group-sm">
                    <input type="file" id="FileUpload" name="FileUpload" class="btn-warning text-info" />
                </div>
                @*</div>
                    <div class="form-group">*@
                <div @*class="col-md-offset-2"*@>
                    <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary" @*onclick="onSubmit()"*@ />

                </div>
            </div>
        </div>
    }
</p>
