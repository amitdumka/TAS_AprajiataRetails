
@{
    ViewBag.Title = "Purchase Uploader";
}

<h2 class="text-danger">Purchase Upload</h2>
    <div class="">
        <h3 class="text-warning">Upload Voyager Data(Excel)</h3>
        <hr />
        @using (Html.BeginForm("UploadPurchase", "PurchaseUploader", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
        {
    <div class="form form-check">

        <div class="form-group form-row ">

            <div class="control-label col-md-2 text-danger ">Bill Type:</div>
            <div class="col-md-10  ">
                @*@Html.DropDownList("UploadType", EnumHelper.GetSelectList(typeof(UploadTypes)), "Select Upload Type", new { @class = "form-control" })*@

                @Html.RadioButton("BillType", "GST", true) <b class="text-primary">GST </b>
                @Html.RadioButton("BillType", "VAT", false)<b class="text-success"> VAT</b>

            </div>
        </div>
        <div class="form-group form-row">

            <div class="control-label col-md-2 text-danger ">InterSate:</div>
            <div class="col-md-10 ">
                @*@Html.DropDownList("UploadType", EnumHelper.GetSelectList(typeof(UploadTypes)), "Select Upload Type", new { @class = "form-control" })*@
                @Html.RadioButton("InterState", "InterState", true) <b class="text-primary"> InterState</b>
                @Html.RadioButton("InterState", "WithInState", false) <b class="text-success"> With In State</b>
            </div>
        </div>

        <div class="form-group form-row ">

            <div class="control-label col-md-2 text-primary">Excel File:</div>
            <div class="col-md-10 ">
                <input type="file" id="FileUpload" name="FileUpload" class="btn-warning text-info form-control-sm" />
            </div>
        </div>

        <div class="form-group form-row">

            <div class="col-md-offset-10">
                <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary form-control-sm" @*onclick="onSubmit()"*@ />

            </div>
        </div>
    </div>
        }
    </div>

