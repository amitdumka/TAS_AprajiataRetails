@model IEnumerable<AprajitaRetails.Areas.TAS.Models.Data.AccountNumber>

@{
    ViewBag.Title = "Index";
}

<h2>Bank Accounts</h2>

<p>
     @Html.ActionLink("Create New ", "Create", new { id = 0 }, new { data_modal = "" , @class = "btn btn-primary btn-sm"})
</p>
<table class="table table-bordered table-condensed table-hover bg-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bank.BankName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="bg-info">
            <td>
                @Html.DisplayFor(modelItem => item.Bank.BankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AccountNumberId },new {  @class = "btn btn-warning btn-sm" }) 
                @Html.ActionLink("Details", "Details", new { id = item.AccountNumberId},new { @class="btn btn-info btn-sm" })
                @Html.ActionLink("Delete", "Delete", new { id = item.AccountNumberId},new { @class="btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
@section Scripts {

    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $("a[data-modal]").on("click", function (e) {
                $('#myModalContent').load(this.href, function () {
                    $('#myModal').modal({
                        keyboard: true
                    }, 'show');
                });
                return false;
            });
        });

    </script>
}