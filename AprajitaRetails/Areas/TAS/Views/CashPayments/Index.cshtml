@model IEnumerable<AprajitaRetails.Areas.TAS.Models.Data.CashPayment>

@{
    ViewBag.Title = "Index";
}

<h2>Cash Payments</h2>

<p>
    @Html.ActionLink("Create New ", "Create", null, new { data_modal = "", @class = "btn btn-primary btn-sm" })
    @Html.ActionLink("Home Expenses ", "HomeExpenses", null, new { data_modal = "", @class = "btn btn-success btn-sm" })
</p>
<table class="table table-bordered table-condensed table-hover bg-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mode.Transcation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlipNo)
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr class="bg-info">
            <td>
                @Html.DisplayFor(modelItem => item.Mode.Transcation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaidTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlipNo)
            </td>
            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id=item.CashPaymentId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.CashPaymentId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.CashPaymentId })
            </td>*@
        </tr>
    }

</table>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
@section Scripts {

    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $("a[data-modal]").on("click", function (e) {
                $('#myModalContent').load(this.href, function () {
                    $('#myModal').modal({
                        keyboard: true
                    }, 'show');
                });
                return false;
            });
        });

    </script>
}